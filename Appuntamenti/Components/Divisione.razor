<h3>Tabellina delle divisioni del numero @baseDivisione</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Base</th>
            <th>Divisore</th>
            <th>Risultato</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i <= ripetizioni; i++)
        {
            <tr>
                <td>@baseDivisione</td>
                <td>@i</td>
                <td>@operazione(baseDivisione, i)</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public float baseDivisione { set; get; }
    [Parameter]
    public int ripetizioni { set; get; }

    private float operazione(float baseOperazione, int divisore)
    {
        if (divisore == 0)
        {
            return 0;
        }
        return baseOperazione / divisore;
    }
}
